<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.GameController">
    <children>
        <Label text="Enter Game Window Size" />
        <HBox alignment="CENTER">
            <Label text="Horizontal: " />
            <TextField id="Horizontal"/>
        </HBox>
        <HBox alignment="CENTER">
            <Label text="Vertical: " />
            <TextField id="Vertical"/>
        </HBox>
        <Button fx:id="startGame" text="Start Game" onAction="#startGame" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
